<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="60dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_del_one_timer"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/swipe_button_info"
            android:text="@string/delete_a_line"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_update_one_timer"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/swipe_button_info"
            android:text="@string/update_timer"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_totop_one_timer"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/swipe_button_info"
            android:text="@string/totop_timer"
            android:textColor="@android:color/white" />
    </LinearLayout>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
