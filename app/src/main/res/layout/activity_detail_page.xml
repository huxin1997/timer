<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_detail_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/group_head_img" />

        <ImageView
            android:id="@+id/iv_btn_qr_code"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_qr_code_black" />

        <ImageView
            android:id="@+id/iv_btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_back_arrow_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_timer_detail_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/detail_timer_name_example"
                android:textColor="#222"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_timer_detail_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/detail_timer_number_example"
                android:textColor="#222"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>


    <!--底下的内容 倒计时啥的-->
    <LinearLayout
        android:id="@+id/ll_detail_timer_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_detail_head"
        android:background="@drawable/left_right_none_border"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detail_timer_list_str"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_timer_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_timer_manage_str"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>